{
  "name": "clipquiz-api",
  "version": "0.0.0",
  "description": "ClipQuiz API",
  "main": "app.ts",
  "private": true,
  "directories": {
    "test": "test"
  },
  "author": {
    "email": "dev.michal.99.zajac@gmail.com",
    "name": "Michal Zajac",
    "url": "https://michalzajac.dev"
  },
  "keywords": [
    "api",
    "fastify",
    "typescript"
  ],
  "license": "ISC",
  "scripts": {
    "test": "DOTENV_CONFIG_PATH=.env.test jest",
    "start": "node dist/lambda/index.js",
    "build": "swc --copy-files --delete-dir-on-start --out-dir=dist --ignore=./src/dev.ts src lambda package.json",
    "build:dev": "swc --copy-files --log-watch-compilation --out-dir=dist src package.json",
    "build:dev:watch": "swc --copy-files --watch --log-watch-compilation --out-dir=dist src package.json",
    "dev": "npm run build:dev && concurrently -k -p \"[{name}]\" -n \"SWC,APP\" -c \"yellow.bold,cyan.bold\" \"npm:build:dev:watch\" \"npm:dev:start\"",
    "dev:start": "node --watch -r dotenv/config dist/src/dev.js | pino-pretty --colorize --colorizeObjects --singleLine",
    "typeorm": "node -r dotenv/config -r ts-node/register ./node_modules/typeorm/cli.js",
    "migration:make": "npm run typeorm migration:generate src/migrations/$npm_config_name -- -d src/db",
    "migration:migrate": "npm run typeorm migration:run -- -d src/db",
    "migration:revert": "npm run typeorm migration:revert -- -d src/db",
    "migration:show": "npm run typeorm migration:show -- -d src/db",
    "check": "npm-run-all check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint . --ext .js,.ts",
    "format": "npm-run-all format:*",
    "format:lint": "eslint --fix './**/*.{ts,js}'",
    "format:prettier": "prettier --write './**/*.{ts,js,json}'",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "prepare": "node .husky/install.mjs"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/aws-lambda": "^4.0.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "fastify": "^4.26.1",
    "fastify-plugin": "^4.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "release-it": "^17.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "./**/*.{ts,js}": [
      "eslint --fix"
    ],
    "./**/*.{json,ts,js}": [
      "prettier --write"
    ]
  }
}
