{
  "name": "clipquiz-api",
  "version": "0.1.0",
  "description": "ClipQuiz API",
  "main": "src/index.ts",
  "private": true,
  "directories": {
    "test": "test"
  },
  "author": {
    "email": "dev.michal.99.zajac@gmail.com",
    "name": "Michal Zajac",
    "url": "https://michalzajac.dev"
  },
  "keywords": [
    "api",
    "fastify",
    "typescript"
  ],
  "license": "ISC",
  "scripts": {
    "start": "node dist/index.js",
    "build": "prisma generate && tsc && tsc-alias",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate deploy",
    "db:make": "prisma migrate dev --create-only",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate",
    "check": "npm-run-all check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint . --ext .js,.ts",
    "format": "npm-run-all format:*",
    "format:db": "prisma format",
    "format:lint": "eslint --fix './**/*.{ts,js}'",
    "format:prettier": "prettier --write './**/*.{ts,js,json}'",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "prepare": "node .husky/install.mjs"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/passport": "^2.4.0",
    "@fastify/secure-session": "^7.5.1",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "^5.13.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "fastify": "^4.26.1",
    "fastify-plugin": "^4.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@swc/core": "^1.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.4.4",
    "@types/passport-google-oauth20": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prisma": "^5.13.0",
    "release-it": "^17.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "./**/*.{ts,js}": [
      "eslint --fix"
    ],
    "./**/*.{json,ts,js}": [
      "prettier --write"
    ]
  }
}
