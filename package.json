{
  "name": "clipquiz-api",
  "version": "0.0.0",
  "description": "ClipQuiz API",
  "main": "app.ts",
  "private": true,
  "directories": {
    "test": "test"
  },
  "author": {
    "email": "dev.michal.99.zajac@gmail.com",
    "name": "Michal Zajac",
    "url": "https://michalzajac.dev"
  },
  "keywords": [
    "api",
    "fastify",
    "typescript"
  ],
  "license": "ISC",
  "scripts": {
    "test": "npm run build && tsc -p tsconfig.test.json && c8 node --test -r ts-node/register/transpile-only test/**/*.ts",
    "start": "npm run build && fastify start -l info dist/src/app.js",
    "build": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/src/app.js",
    "prepare": "node .husky/install.mjs",
    "lint": "eslint . --ext .js,.ts",
    "format": "npm-run-all format:*",
    "format:lint": "eslint --fix './**/*.{ts,js}'",
    "format:prettier": "prettier --write './**/*.{ts,js}'",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "dotenv": "^16.4.4",
    "fastify": "^4.26.1",
    "fastify-cli": "^6.1.1",
    "fastify-plugin": "^4.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "c8": "^9.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "release-it": "^17.0.3",
    "ts-node": "^10.4.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "./**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
